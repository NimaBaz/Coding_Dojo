@model User

<div>
    <form asp-controller="User" class="form-group" asp-action="Register" method="post">

        <span asp-validation-for="FirstName" class="fst-italic"></span>
        <div>
            <label for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
        </div>

        <span asp-validation-for="LastName" class="fst-italic"></span>
        <div>
            <label for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
        </div>

        <span asp-validation-for="Email" class="fst-italic"></span>
        <div>
            <label for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>

        <span asp-validation-for="Password" class="fst-italic"></span>
        <div>
            <label for="Password"></label>
            <input class="form-control" asp-for="Password" value="Password123!"/>
        </div>

        <span asp-validation-for="ConfirmPassword" class="fst-italic"></span>
        <div>
            <label for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" value="Password123!"/>
        </div>

        <input class="btn" type="submit" value="Register"/>
    </form>
</div>