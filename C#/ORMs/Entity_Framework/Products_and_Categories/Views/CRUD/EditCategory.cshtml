@{
    ViewData["Title"] = "Update Page";
}

@model Category

<h2>Update a Category</h2>
<form asp-action="UpdateCategory" asp-controller="Category" asp-route-CategoryId="@Model.CategoryId" method="post" class="col-8">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input class="btn" type="submit" value="Update">
    </div>
    <a class="btn" href="/category/@Model.CategoryId">Back</a>
</form>